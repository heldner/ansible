configuration{
    modi: "ssh,drun,window";
    lines: 5;
    font: "{{ rofi_font }}";
    show-icons: true;
    icon-theme: "Paper Mono";
    terminal: "urxvtc";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: " ï”—  Apps ";
}

@theme "dwmblush"

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    width: {{ rofi_window_width }};
    height: {{ rofi_window_height }};
    border: {{ rofi_window_border }};
    border-color: @border-col;
    background-color: @bg-col;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg-col;
    border-radius: 5px;
    padding: {{ rofi_inputbar_padding }};
}

prompt {
    background-color: @blue;
    padding: 6px;
    text-color: @white;
    border-radius: 3px;
    margin: 20px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 2;
    background-color: @bg-col;
}

element {
    padding: {{ rofi_element_padding }};
    background-color: @bg-col;
    text-color: @fg-col  ;
}

element-icon {
    size: {{ rofi_element_icon_size }};
}

element selected {
    background-color:  @selected-col ;
    text-color: @fg-col2  ;
}

mode-switcher {
    spacing: 0;
  }

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5;
    horizontal-align: 0.5;
}

button selected {
  background-color: @bg-col;
  text-color: @blue;
}
