XF86Audio{Lower,Raise}Volume
  wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%{-,+} --limit 1

XF86AudioMute
  wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

XF86Audio{Prev,Next,Play}
  mpc -q {prev,next,toggle} > /dev/null

XF86Launch1
  /usr/local/bin/firefox

XF86ScreenSaver
  slock

XF86Display
  xset dpms force off

Print
  flameshot gui --path {{ flameshot_dir }}

super + a
  ~/.local/bin/action_menu_run

super + s
  ~/.dwm/actions/ssh

alt + Tab
  rofi -show window \
    -kb-cancel "Alt+Escape,Escape" \
    -kb-accept-entry "!Alt-Tab,Return" \
    -kb-row-down "Alt+Tab,Alt+Down" \
    -kb-row-up "Alt+Shift+Tab,Alt+Up"

super + Down
  playerctl play-pause

super + {Right,Left}
  playerctl position 30{+,-}
