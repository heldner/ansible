# Start at sdb to avoid system harddrive.
KERNEL!="sd[b-z][0-9]", KERNEL!="sd[b-z]", GOTO="media_by_label_auto_mount_end"

# Import FS infos
IMPORT{program}="/sbin/blkid -o udev -p %N"

# Create a label
ENV{ID_FS_LABEL}!="", ENV{dir_name}="$env{ID_FS_LABEL}"

# Global mount options
ACTION=="add", ENV{mount_options}="defaults,relatime"
# Filesystem-specific mount options
ACTION=="add", ENV{ID_FS_TYPE}=="vfat|ntfs", ENV{mount_options}="$env{mount_options},nls=utf8,gid=100,umask=002"

# Mount the device
#ACTION=="add", ENV{dir_name}!="", RUN+="/usr/bin/install -d /mnt/usb/%E{dir_name}", RUN+="/bin/mount -o $env{mount_options} /dev/%k /mnt/usb/%E{dir_name}"
ACTION=="add", ENV{dir_name}!="", RUN+="/usr/local/bin/automount-usb /dev/%k /mnt/usb/%E{dir_name} -o $env{mount_options}"

# Clean up after removal
ACTION=="remove", ENV{dir_name}!="", RUN+="/bin/umount -l /mnt/usb/%E{dir_name}", RUN+="/bin/rmdir /mnt/usb/%E{dir_name}"

# Exit
LABEL="media_by_label_auto_mount_end"

