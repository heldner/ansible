# Start at sdb for nvme harddrive.
KERNEL!="sd[a-z]*", SUBSYSTEMS!="usb", SUBSYSTEM!="block", GOTO="media_by_label_auto_mount_end"

# If no lable do nothing
ENV{ID_FS_LABEL}=="", GOTO="media_by_label_auto_mount_end"

# Import FS infos
IMPORT{program}="/sbin/blkid -o udev -p %N"

# Set mount options
ACTION=="add", ENV{ID_FS_TYPE}=="vfat|ntfs", ENV{mount_options}="defaults,relatime,nls=utf8,gid=100,dmask=002,fmask=113"

# Mount the device
ACTION=="add", RUN+="/usr/bin/usbmount.sh -mount $devnode %E{ID_FS_LABEL}"

# Clean up after removal
ACTION=="remove", RUN+="/usr/bin/usbmount.sh -umount %E{ID_FS_LABEL}"

# Exit
LABEL="media_by_label_auto_mount_end"
