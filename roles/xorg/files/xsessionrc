# nobeep
xset -b

# screensaver
xautolock &
screensaver_disabler

# terminal
urxvtd -q -f -o

# for gtk3 apps
export GTK_THEME='Adwaita-dark'

# use x11 ssh askpass
if [ -x /usr/bin/ssh-askpass-fullscreen ]; then
    export SSH_ASKPASS=/usr/bin/ssh-askpass-fullscreen
    export SUDO_ASKPASS=/usr/bin/ssh-askpass-fullscreen
    export SSH_ASKPASS_REQUIRE=force
fi

# swap mouse scroll
enable_natural_scroll

# mute microphone
amixer set Capture nocap >/dev/null

# key combiantions
sxhkd &

# dwm status
spoon &

# language
export LC_ALL=en_US.UTF-8

# imapfilter
if command -v imapfilter >/dev/null; then
    imapfilter -c ~/.imapfilter/yandex.lua >> ~/.imapfilter/log 2>&1 &
fi

# update wallpaper
if [ -f "${HOME}/.dwm/actions/update-wallpaper" ]; then
    "${HOME}/.dwm/actions/update-wallpaper"
fi

# run isync when local dirs changed
watch_mail_dir
